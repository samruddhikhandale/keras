// For more details, see https://aka.ms/devcontainer.json.
{
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    
    "postCreateCommand": "sh .devcontainer/setup.sh",
    "waitFor": "postCreateCommand",

    // Configure tool-specific properties.
    "customizations": {
        "settings": {
            "files.watcherExclude": {
                "**/bazel-*/**": true
            },
            "search.exclude": {
                "**/bazel-*/**": true
            }
        }
    }
}
